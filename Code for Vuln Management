Baseline_31Dec2024 =
CALCULATE(
    SUM('Vulnerability'[VulnCount]),
    'Vulnerability'[Date] = DATE(2024,12,31)
)




OEs_Met_80pct =
COUNTROWS (
    FILTER (
        VALUES ( 'Vulnerability Management'[OE] ),
        [Percent_Achieved] >= 0.8
    )
)



Unmanaged Risks (ITOM+ISMS+BA) :=
CALCULATE(
    SUM ( 'YourTable'[NumericalScore] ),
    'YourTable'[IT Area] = "Unmanaged Risks: ITOM + ISMS + BA"
)

EUC Scoping % (decimal) :=
VAR Pct =
    CALCULATE(
        AVERAGE ( 'YourTable'[NumericalScore] ),
        'YourTable'[IT Area] = "Completed Risk Scoping BAs: EUCs"
    )
RETURN
DIVIDE( Pct, 100 )


Total EUC Apps (planned+active) :=
CALCULATE(
    SUM ( 'YourTable'[NumericalScore] ),
    'YourTable'[IT Area] = "Total EUC Business Applications (planned+active)"
)


EUC Apps Scoped (#) :=
VAR ScopingPct = [EUC Scoping % (decimal)]
VAR TotalEUC   = [Total EUC Apps (planned+active)]
RETURN
IF(
    ISBLANK(TotalEUC),
    BLANK(),
    ROUND( ScopingPct * TotalEUC, 0 )
)
