Audit Matrix Output - Previous Month = 
VAR SelStatus =
    COALESCE (
        SELECTEDVALUE ( StatusTable[Status] ),
        SELECTEDVALUE ( tblAudit[Status] )
    )

VAR PrevMonthFilter =
    PREVIOUSMONTH ( 'Calendar'[Date] )

VAR Result =
    SWITCH (
        TRUE(),

        SelStatus = "Total IT Audit Findings",
            CALCULATE (
                SUM ( tblAudit[Count] ),
                tblAudit[Status] = "Total IT Audit Findings",
                PrevMonthFilter
            ),

        SelStatus = "Remediated",
            CALCULATE (
                SUM ( tblAudit[Count] ),
                tblAudit[Status] = "Remediated",
                PrevMonthFilter
            ),

        SelStatus = "Current Overdue" || SelStatus = "Current overdue",
            CALCULATE (
                SUM ( tblAudit[Count] ),
                tblAudit[Status] = "Current overdue",
                PrevMonthFilter
            ),

        SelStatus = "YTD Remediated",
            FORMAT ( [YTD Remediated audit % - Previous Month], "0%" ),

        BLANK()
    )

RETURN
    COALESCE ( Result, 0 )
