Compliance Matrix Output = 
VAR SelStatus =
    COALESCE (
        SELECTEDVALUE ( StatusTable[Status] ),
        SELECTEDVALUE ( tblCompliance[Status] )
    )
VAR result =
    SWITCH (
        TRUE(),
        SelStatus = "Non-Compliance",   CALCULATE([Total Count], tblCompliance[Status]="Non-Compliance"),
        SelStatus = "Remediated",       CALCULATE([Total Count], tblCompliance[Status]="Remediated"),
        SelStatus = "Current Overdue" || SelStatus = "Current overdue",
                                         CALCULATE([Total Count], tblCompliance[Status]="Current overdue"),
        SelStatus = "YTD Remediated",   format([YTD Remediated %],"0%"), -- SHOW AS %
        BLANK()
    )
RETURN COALESCE(result,0)



Compliance Matrix Output =
VAR SelStatus =
    COALESCE (
        SELECTEDVALUE ( StatusTable[Status] ),
        SELECTEDVALUE ( tblCompliance[Status] )
    )

-- Shift the slicer context back by 1 month
VAR PrevMonthDates =
    DATEADD ( 'Calendar'[Date], -1, MONTH )

VAR result =
    SWITCH (
        TRUE (),

        SelStatus = "Non-Compliance",
            CALCULATE (
                [Total Count],
                PrevMonthDates,
                tblCompliance[Status] = "Non-Compliance"
            ),

        SelStatus = "Remediated",
            CALCULATE (
                [Total Count],
                PrevMonthDates,
                tblCompliance[Status] = "Remediated"
            ),

        SelStatus = "Current Overdue" || SelStatus = "Current overdue",
            CALCULATE (
                [Total Count],
                PrevMonthDates,
                tblCompliance[Status] = "Current overdue"
            ),

        SelStatus = "YTD Remediated",
            FORMAT (
                CALCULATE ( [YTD Remediated %], PrevMonthDates ),
                "0%"
            ),

        BLANK ()
    )

RETURN
    COALESCE ( result, 0 )

-----------------------------------------------------------


Audit Matrix Output = 
VAR SelStatus =
    COALESCE (
        SELECTEDVALUE ( StatusTable[Status] ),
        SELECTEDVALUE ( tblAudit[Status] )
    )
VAR result = 
    SWITCH (
        TRUE(),
        SelStatus = "Total IT Audit Findings",   CALCULATE(SUM(tblAudit[Count]), tblAudit[Status]="Total IT Audit Findings"),
        SelStatus = "Remediated",       CALCULATE(SUM(tblAudit[Count]), tblAudit[Status]="Remediated"),
        SelStatus = "Current Overdue" || SelStatus = "Current overdue",
                                         CALCULATE(SUM(tblAudit[Count]), tblAudit[Status]="Current overdue"),
        SelStatus = "YTD Remediated",   format([YTD Remediated audit %],"0%"), -- SHOW AS %
        BLANK()
    )
RETURN COALESCE(result,0)


